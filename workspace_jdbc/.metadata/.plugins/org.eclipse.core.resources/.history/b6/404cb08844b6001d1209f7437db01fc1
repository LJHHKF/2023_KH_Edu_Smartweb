						break;
					}catch(Exception e) {
						System.out.println("메뉴 번호는 숫자 형식으로 입력해주셔야 합니다.");
						e.printStackTrace();
					}
				}
				if(menu == 0) {
					dao.close();
					System.out.println("프로그램을 종료합니다.");
					System.exit(0);
